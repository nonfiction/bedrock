{
  "name": "nonfiction/bedrock",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "path",
      "url": "web/app/site"
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.8",
    "vlucas/phpdotenv": "^4.1.5",
    "oscarotero/env": "^2.0",
    "roots/bedrock-autoloader": "^1.0",
    "roots/wordpress": "^5.4.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "soberwp/intervention": "^1.3",
    "icanboogie/inflector": "^2.0",
    "johnbillion/extended-cpts": "^4.3",
    "cmb2/cmb2": "^2.7",
    "timber/timber": "^1.14",
    "humanmade/s3-uploads": "^2.2",
    "wpackagist-plugin/members": "^3.0",
    "wpackagist-plugin/safe-redirect-manager": "^1.9",
    "wpackagist-plugin/stream": "^3.5",
    "wpackagist-plugin/wp-crontrol": "^1.8",
    "nonfiction/site": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "phpcs"
    ]
  }
}
