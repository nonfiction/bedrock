APP_NAME=my_website_name

# https://cloud.digitalocean.com/databases
DB_HOST=mysql.example.com:25060
DB_NAME=${APP_NAME}
DB_USER=${APP_NAME}
DB_PASSWORD=my_database_password
DB_PREFIX=wp_

# https://cloud.digitalocean.com/account/api/tokens
S3_UPLOADS_SPACE=
S3_UPLOADS_REGION=
S3_UPLOADS_BUCKET=${APP_NAME}
S3_UPLOADS_KEY=
S3_UPLOADS_SECRET=
S3_UPLOADS_DISABLE_REPLACE_UPLOAD_URL=false

# Optional Stage Switcher
ENV_DEVELOPMENT=http://dev-${APP_NAME}.example.com/
ENV_STAGING=http://staging-${APP_NAME}.example.com/
ENV_PRODUCTION=http://www.${APP_NAME}.com/

WP_ENV=development
