{% set template = 'index' %} 
{% extends "base.twig" %}

{% block content %}
<section id="main" role="main" class="main">
  <div class="content__container">
    {% for post in posts %}
      <img src="https://unsplash.it/900/300?{{ post.id }}" />
      <article class="content post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <h2>{{ post.title }}</h2>
        {{post.content}}
      </article>
    {% endfor %}
  </div>
</section>
{% endblock %}
